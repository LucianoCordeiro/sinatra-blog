<div class="row">
  <div class="col-lg-8">
    <div class="text">
      <h2><%= @post.title %></h2>
      <h5><i>Publicado por <b>Luciano</b> em <%= @post.created_at.strftime("%d/%m/%Y") %></i></h5><br>
      <h4 class='body'><%= @post.body %></h4>
    </div>

    <h4><%= formatted_count(@comments.count) %></h4>
    <div id="comment_box">
      <% @comments.each do |comment| %>
        <div id="each_comment">
          <h4 id="comment_title"><%= comment.author %></h4>
          <h5 id="comment_bodye"><%= comment.body %></h5>
          <h6>Postado em <%= comment.created_at.strftime("%d/%m/%Y") %></h6>
        </div>
      <% end %>
    </div>

    <% if @comments.count > 0 %>
      <h4>Deixe seu comentário:</h4>
    <% end %>

    <%= form('/comments', :create) %>

    <ul>
      <li><%= label :comment, :author %></li>
      <li><%= input :comment, :author %></li>

      <li><%= label :comment, :Texto %></li>
      <li><textarea id="comment_body" name="comment[body]"></textarea></li>
    </ul>

    <%= submit  %>

    <div style="visibility:hidden;"><%= input :comment, :post_id, value: @post.id %></div>

  </div>

  <div class="col-lg-3 col-lg-offset-1">
      <h4 class="mission" align="center">Missão desta página:
        Traduzir os escritos e transmitir o pensamento dos principais filósofos e pensadores contemporâneos do mundo.
      </h4>
    <h3 class="others">Veja também:</h3>
    <% @posts.reverse.take(7).each do |post| %>
      <% if post != @post %>
        <div class="snippet">
          <h4><a href="/artigos/<%= converter(post.title) %>"><%= post.title %></a></h4>
          <h5><%= post.body[0..200] + "..." %></h5>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
